        </header>
        <div id="pm-messages"></div>
        <div class="footer">
            <input type="text" id="pmInput" placeholder="áƒáƒ˜áƒ áƒáƒ“áƒ˜ áƒ›áƒ”áƒ¡áƒ˜áƒ¯áƒ˜...">
            <button onclick="sendPM()" style="background:red; color:white; border:none; width:45px; height:45px; border-radius:50%;">â¤</button>
        </div>
    </div>

    <script>
        const { createClient } = supabase;
        const _db = createClient("https://ftfciebnywbondaiarnc.supabase.co", "sb_publishable_eQZDSu_Jy1gWmXJFF800Pw_TP2kBRLI");

        const me = localStorage.getItem('username') || "Anon";
        let room = "áƒ–áƒáƒ’áƒáƒ“áƒ˜ áƒ©áƒáƒ¢áƒ˜", target = "", users = {};

        async function boot() {
            const { data } = await _db.from('user_profiles').select('*');
            if(data) data.forEach(u => users[u.nickname] = u);
            
            if(users[me]) {
                document.getElementById('topAva').style.backgroundImage = `url('${users[me].avatar_url || 'https://i.pinimg.com/originals/f1/0f/f7/f10ff70a715515ab166ae319da3f2743.png'}')`;
            }
            loadChat();
        }

        async function loadChat() {
            const { data } = await _db.from('messages_v3').select('*').eq('room_name', room).order('created_at', { ascending: false }).limit(50);
            if(!data) return;

            document.getElementById('chat-window').innerHTML = data.reverse().map(m => {
                const u = users[m.nickname] || {};
                const canDel = (m.nickname === me || me === 'abu007');
                return `
                <div class="msg-container">
                    <div class="chat-avatar" style="background-image: url('${u.avatar_url || 'https://i.pinimg.com/originals/f1/0f/f7/f10ff70a715515ab166ae319da3f2743.png'}')" onclick="openProfile('${m.nickname}')"></div>
                    <div class="msg-bubble">
                        <div class="msg-header">
                            <span class="nick-tag" onclick="openProfile('${m.nickname}')">${m.nickname}</span>
                            ${canDel ? `<span class="del-btn" onclick="killMsg(${m.id})">Ã—</span>` : ''}
                        </div>
                        <div style="font-size:14px;">${m.message}</div>
                    </div>
                </div>`;
            }).join('');
            document.getElementById('chat-window').scrollTop = document.getElementById('chat-window').scrollHeight;
        }

        async function openProfile(nick) {
            target = nick;
            const u = users[nick] || { nickname: nick, status: '...' };
            document.getElementById('pNick').innerText = nick;
            document.getElementById('pStatus').innerText = u.status || 'áƒ¡áƒ¢áƒáƒ¢áƒ£áƒ¡áƒ˜ áƒªáƒáƒ áƒ˜áƒ”áƒšáƒ˜áƒ';
            document.getElementById('pImg').style.backgroundImage = `url('${u.avatar_url || 'https://i.pinimg.com/originals/f1/0f/f7/f10ff70a715515ab166ae319da3f2743.png'}')`;
            document.getElementById('editBox').style.display = (nick === me) ? 'block' : 'none';
            document.getElementById('pmBtn').style.display = (nick === me) ? 'none' : 'block';
            document.getElementById('profileModal').style.display = 'block';
            document.getElementById('mainOverlay').style.display = 'block';
        }

        async function saveProfile() {
            const a = document.getElementById('newAva').value;
            const s = document.getElementById('newStat').value;
            await _db.from('user_profiles').upsert({ nickname: me, avatar_url: a || users[me]?.avatar_url, status: s || users[me]?.status }, { onConflict: 'nickname' });
            location.reload();
        }

        async function openInbox() {
            const { data } = await _db.from('private_messages').select('sender').eq('receiver', me).order('created_at', { ascending: false });
            const senders = [...new Set(data?.map(x => x.sender))];
            document.getElementById('inboxList').innerHTML = senders.length ? senders.map(s => `<div onclick="goPrivate('${s}')" style="padding:12px; border-bottom:1px solid #222;">ğŸ“© áƒ›áƒ”áƒ¡áƒ˜áƒ¯áƒ˜: ${s}</div>`).join('') : "áƒªáƒáƒ áƒ˜áƒ”áƒšáƒ˜áƒ";
            document.getElementById('inboxModal').style.display = 'block';
            document.getElementById('mainOverlay').style.display = 'block';
        }

        function goPrivate(s) { target = s; startPrivate(); }

        function startPrivate() {
            closeEverything();
            document.getElementById('pmTargetNick').innerText = target;
            document.getElementById('pm-window').style.display = 'flex';
            loadPMs();
        }

        async function loadPMs() {
            const { data } = await _db.from('private_messages').select('*').or(`and(sender.eq.${me},receiver.eq.${target}),and(sender.eq.${target},receiver.eq.${me})`).order('created_at', { ascending: true });
            document.getElementById('pm-messages').innerHTML = data ? data.map(m => `<div class="bubble ${m.sender === me ? 'sent' : 'received'}">${m.content || m.message}</div>`).join('') : "";
            document.getElementById('pm-messages').scrollTop = document.getElementById('pm-messages').scrollHeight;
        }

        async function sendPM() {
            const i = document.getElementById('pmInput');
            if(!i.value.trim()) return;
            await _db.from('private_messages').insert([{ sender: me, receiver: target, content: i.value, message: i.value }]);
            i.value = ""; loadPMs();
        }

        async function sendMsg() {
            const i = document.getElementById('msgInput');
            if(!i.value.trim()) return;
            await _db.from('messages_v3').insert([{ nickname: me, message: i.value, room_name: room }]);
            i.value = ""; boot();
        }

        async function killMsg(id) {
            if(confirm("áƒ¬áƒáƒ•áƒ¨áƒáƒšáƒáƒ—?")) { await _db.from('messages_v3').delete().eq('id', id); boot(); }
        }

        function changeRoom(r, el) {
            room = r;
            document.getElementById('roomTitle').innerText = r;
            document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
            el.classList.add('active'); closeEverything(); boot();
        }

        function closePM() { document.getElementById('pm-window').style.display = 'none'; }
        function closeEverything() {
            document.getElementById('sideNav').classList.remove('open');
            document.getElementById('profileModal').style.display = 'none';
            document.getElementById('inboxModal').style.display = 'none';
            document.getElementById('mainOverlay').style.display = 'none';
        }

        window.onload = boot;
        _db.channel('realtime').on('postgres_changes', { event: '*', schema: 'public' }, () => boot()).subscribe();
    </script>
