    <style>
        :root { --red: #ff0000; --bg: #050505; --dark: #121212; }
        * { margin: 0; padding: 0; box-sizing: border-box; font-family: sans-serif; -webkit-tap-highlight-color: transparent; }
        body { background: var(--bg); color: white; height: 100dvh; display: flex; flex-direction: column; overflow: hidden; }
        
        header { height: 60px; border-bottom: 1px solid var(--red); display: flex; justify-content: space-between; align-items: center; padding: 0 15px; background: #000; z-index: 1000; }
        .room-title { color: var(--red); font-weight: bold; font-size: 13px; text-transform: uppercase; }

        /* Sidebar - áƒáƒ—áƒáƒ®áƒ”áƒ‘áƒ˜ */
        .sidebar { position: fixed; left: -100%; top: 0; width: 280px; height: 100%; background: #000; border-right: 2px solid var(--red); transition: 0.3s; z-index: 9999; padding: 15px; overflow-y: auto; }
        .sidebar.open { left: 0; }
        .nav-link { padding: 12px; color: #ccc; cursor: pointer; background: #111; margin-bottom: 8px; border-radius: 10px; border: 1px solid #222; display: flex; align-items: center; gap: 10px; font-size: 14px; }
        .nav-link.active { background: #300; border-color: var(--red); color: white; }

        /* áƒ©áƒáƒ¢áƒ˜ */
        #chat-window { flex: 1; padding: 15px; overflow-y: auto; display: flex; flex-direction: column; gap: 12px; }
        .msg-container { display: flex; gap: 10px; align-self: flex-start; max-width: 95%; }
        .chat-avatar { width: 45px; height: 45px; border-radius: 50%; border: 2px solid var(--red); background-size: cover; background-position: center; flex-shrink: 0; }
        .msg-bubble { background: var(--dark); padding: 10px 14px; border-radius: 15px; border: 1px solid #222; flex: 1; position: relative; }
        .msg-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 4px; }
        .nick-tag { color: var(--red); font-size: 13px; font-weight: bold; cursor: pointer; }
        .del-btn { color: #444; cursor: pointer; font-size: 18px; line-height: 1; }

        /* áƒ›áƒáƒ“áƒáƒšáƒ”áƒ‘áƒ˜ */
        .modal { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 90%; max-width: 340px; background: #0a0a0a; border: 2px solid var(--red); border-radius: 20px; z-index: 10000; padding: 25px; text-align: center; }
        .overlay { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.85); z-index: 9000; }
        .p-input { width: 100%; background: #111; border: 1px solid #333; color: white; padding: 12px; border-radius: 10px; margin-top: 10px; outline: none; }
        .p-btn { width: 100%; background: var(--red); color: white; border: none; padding: 12px; border-radius: 10px; margin-top: 15px; font-weight: bold; cursor: pointer; }

        /* áƒáƒ áƒ˜áƒ•áƒáƒ¢áƒ˜ */
        #pm-window { display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: #000; z-index: 20000; flex-direction: column; }
        #pm-messages { flex: 1; padding: 15px; overflow-y: auto; display: flex; flex-direction: column; gap: 10px; }
        .bubble { padding: 10px 15px; border-radius: 15px; max-width: 80%; font-size: 14px; }
        .sent { align-self: flex-end; background: var(--red); }
        .received { align-self: flex-start; background: #222; }

        .footer { padding: 12px; background: #000; border-top: 1px solid #222; display: flex; gap: 10px; }
        input { flex: 1; background: #111; border: 1px solid #333; color: white; padding: 12px; border-radius: 25px; outline: none; }
    </style>
</head>
